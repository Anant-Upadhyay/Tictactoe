<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game_activity">

    <TextView
        android:id="@+id/P1"
        android:layout_width="135dp"
        android:layout_height="51dp"
        android:text="TextView"
        android:textColor="#B71C1C"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:id="@+id/P2"
        android:layout_width="134dp"
        android:layout_height="51dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:id="@+id/WP1"
        android:layout_width="34dp"
        android:layout_height="36dp"
        android:text="0"
        android:textColor="#B71C1C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <TextView
        android:id="@+id/WP2"
        android:layout_width="27dp"
        android:layout_height="39dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <TableLayout
        android:layout_width="325dp"
        android:layout_height="325dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/b1"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:backgroundTint="#D5D6D6"
                android:contentDescription="1"
                android:src="@drawable/empty" />

            <ImageButton
                android:id="@+id/b2"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:contentDescription="2"
                android:src="@drawable/empty" />

            <ImageButton
                android:id="@+id/b3"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:contentDescription="3"
                android:src="@drawable/empty" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/b4"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:contentDescription="4"
                android:src="@drawable/empty" />

            <ImageButton
                android:id="@+id/b5"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:contentDescription="5"
                android:src="@drawable/empty" />

            <ImageButton
                android:id="@+id/b6"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:contentDescription="6"
                android:src="@drawable/empty" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/b7"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:contentDescription="7"
                android:src="@drawable/empty" />

            <ImageButton
                android:id="@+id/b8"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:contentDescription="8"
                android:src="@drawable/empty" />

            <ImageButton
                android:id="@+id/b9"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:contentDescription="9"
                android:src="@drawable/empty" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="144dp"
        android:layout_height="57dp"
        android:backgroundTint="@color/black"
        android:text="Back"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.888" />

    <Button
        android:id="@+id/restart"
        android:layout_width="167dp"
        android:layout_height="58dp"
        android:backgroundTint="@color/black"
        android:text="Restart"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.888" />

    <TextView
        android:id="@+id/W2"
        android:layout_width="66dp"
        android:layout_height="29dp"
        android:text="Wins:"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/W1"
        android:layout_width="66dp"
        android:layout_height="29dp"
        android:text="Wins:"
        android:textColor="#B71C1C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />


</androidx.constraintlayout.widget.ConstraintLayout>